<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stratifx.application.MainController">
    <top>
        <MenuBar blendMode="SRC_ATOP" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuOpenAction" text="Open" />
                        <MenuItem mnemonicParsing="false" onAction="#onCloseAction" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Tools">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onToolsTangentAction" text="Tangents" />
                        <MenuItem mnemonicParsing="false" onAction="#onToolsTimeLineAction" text="TimeLine" />
                        <Menu mnemonicParsing="false" text="Displacements">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onToolsDisplacementsPatchAction" text="Patch" />
                            </items>
                        </Menu>
                  <Menu mnemonicParsing="false" text="MasterSlave">
                     <items>
                              <MenuItem mnemonicParsing="false" onAction="#onToolsMasterSlaveAction" text="Fault" />
                              <MenuItem mnemonicParsing="false" onAction="#onToolsHorizonMSAction" text="Horizon" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Griding">
                     <items>
                              <MenuItem mnemonicParsing="false" onAction="#onToolsTriangulationAction" text="Triangulation" />
                        <MenuItem mnemonicParsing="false" onAction="#onToolsStratiGridAction" text="StratiGrid" />
                     </items>
                  </Menu>
                        <MenuItem mnemonicParsing="false" onAction="#onToolsResetAction" text="Reset" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Deform">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Options" />
                        <Menu mnemonicParsing="false" text="NodeMoveTo">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onDeformNodeChainMailAction" text="ChainMail" />
                                <MenuItem mnemonicParsing="false" onAction="#onDeformNodeMassAction" text="Mass/Spring" />
                            </items>
                        </Menu>
                  <Menu mnemonicParsing="false" text="GlobalMove">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onDeformGlobalFEMAction" text="FEMSolver" />
                    </items>
                  </Menu>
                        <Menu mnemonicParsing="false" text="Top">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onDeformTopVSAction" text="Vertical Shear" />
                                <MenuItem mnemonicParsing="false" onAction="#onDeformTopMLSAction" text="Moving LS" />
                                <MenuItem mnemonicParsing="false" onAction="#onDeformTopFlexuralAction" text="Flexural" />
                                <Menu mnemonicParsing="false" text="FEA Solver">
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#onDeformTopFEADynamicAction" text="Dynamic" />
                                        <MenuItem mnemonicParsing="false" onAction="#onDeformTopFEAStaticAction" text="Static" />
                                        <MenuItem mnemonicParsing="false" onAction="#onDeformTopFEAStaticLSAction" text="Static LS" />
                                        <MenuItem mnemonicParsing="false" onAction="#onDeformTopFEAFem2dAction" text="FEM2D" />
                                    </items>
                                </Menu>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Dilatation">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onDeformDilatationDecompactionAction" text="Decompaction" />
                            </items>
                        </Menu>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Topology">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onTopologyRemoveUnitAction" text="Remove Unit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Properties">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onPropertiesXYAction" text="XY" />
                        <MenuItem mnemonicParsing="false" onAction="#onPropertiesPorosityAction" text="Porosity" />
                        <MenuItem mnemonicParsing="false" onAction="#onPropertiesStratigraphyAction" text="Stratigraphy" />
                        <MenuItem mnemonicParsing="false" onAction="#onPropertiesElongationAction" text="Elongation" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <right>
        <ToolBar blendMode="SRC_ATOP" orientation="VERTICAL" BorderPane.alignment="CENTER_RIGHT">
            <items>
                <ToggleButton focusTraversable="false" mnemonicParsing="false" onAction="#onTreeUIAction">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/icons/viewTree.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                <ToggleButton focusTraversable="false" mnemonicParsing="false" onAction="#onPropertyUIAction">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/icons/viewProperty.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                <ToggleButton focusTraversable="false" mnemonicParsing="false" onAction="#onShowParametersAction">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/icons/parameters.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                
                <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" onAction="#onOneOneAction">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/icons/viewMag1.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" onAction="#onZoomRectAction">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/icons/viewRect.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" onAction="#onShowPointsAction">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/icons/showPoints.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
               
            </items>
        </ToolBar>
    </right>
</BorderPane>
